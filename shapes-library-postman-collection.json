                        },
                        "description": "Get all shape categories with optional filtering and localization"
                    },
                    "response": []
                },
                {
                    "name": "Get Shape Category by ID",
                    "event": [{
                        "listen": "test",
                        "script": {
                            "exec": [
                                "if (pm.response.code === 200) {",
                                "    const jsonData = pm.response.json();",
                                "    if (jsonData.data && jsonData.data.id) {",
                                "        pm.environment.set('shape_category_id', jsonData.data.id);",
                                "    }",
                                "}"
                            ],
                            "type": "text/javascript"
                        }
                    }],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/shape-categories/{{shape_category_id}}?lang=en",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "shape-categories", "{{shape_category_id}}"],
                            "query": [{
                                "key": "lang",
                                "value": "en"
                            }]
                        },
                        "description": "Get a specific shape category by ID. Auto-saves category_id to environment."
                    },
                    "response": []
                },
                {
                    "name": "Create Shape Category",
                    "event": [{
                        "listen": "test",
                        "script": {
                            "exec": [
                                "if (pm.response.code === 201) {",
                                "    const jsonData = pm.response.json();",
                                "    if (jsonData.data && jsonData.data.id) {",
                                "        pm.environment.set('shape_category_id', jsonData.data.id);",
                                "    }",
                                "}"
                            ],
                            "type": "text/javascript"
                        }
                    }],
                    "request": {
                        "method": "POST",
                        "header": [{
                            "key": "Content-Type",
                            "value": "application/json"
                        }],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Geometric Shapes\",\n    \"name_en\": \"Geometric Shapes\",\n    \"name_ar\": \"أشكال هندسية\",\n    \"description\": \"Basic geometric shapes like circles, squares, triangles\",\n    \"description_en\": \"Basic geometric shapes like circles, squares, triangles\",\n    \"description_ar\": \"أشكال هندسية أساسية مثل الدوائر والمربعات والمثلثات\",\n    \"slug\": \"geometric-shapes\",\n    \"sort_order\": 1,\n    \"is_active\": true\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/shape-categories",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "shape-categories"]
                        },
                        "description": "Create a new shape category. Auto-saves category_id to environment."
                    },
                    "response": []
                },
