            "description": "Password reset flow with OTP verification (2 steps)"
        },
        {
            "name": "User Profile",
            "item": [
                {
                    "name": "Get Current User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response includes user data\", function () {",
