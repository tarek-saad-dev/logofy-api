{
    "info": {
        "_postman_id": "user-profile-endpoints-2025",
        "name": "User Profile & Account Management API",
        "description": "Postman collection for authenticated user profile update and account deletion endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [{
            "name": "Update User Profile",
            "event": [{
                "listen": "test",
                "script": {
                    "exec": [
                        "pm.test('Status code is 200', function () {",
                        "    pm.response.to.have.status(200);",
                        "});",
                        "",
                        "pm.test('Response has success field', function () {",
                        "    const jsonData = pm.response.json();",
                        "    pm.expect(jsonData).to.have.property('success');",
                        "    pm.expect(jsonData.success).to.be.true;",
                        "});",
                        "",
                        "pm.test('Response contains user data', function () {",
                        "    const jsonData = pm.response.json();",
                        "    pm.expect(jsonData).to.have.property('data');",
                        "    pm.expect(jsonData.data).to.have.property('user');",
                        "    pm.expect(jsonData.data.user).to.have.property('id');",
                        "    pm.expect(jsonData.data.user).to.have.property('name');",
                        "    pm.expect(jsonData.data.user).to.have.property('email');",
                        "});",
                        "",
                        "pm.test('User name matches request', function () {",
                        "    const jsonData = pm.response.json();",
                        "    const requestBody = JSON.parse(pm.request.body.raw);",
                        "    if (requestBody.name) {",
                        "        pm.expect(jsonData.data.user.name).to.equal(requestBody.name);",
                        "    }",
                        "});",
                        "",
                        "pm.test('Response format matches /api/auth/me', function () {",
                        "    const jsonData = pm.response.json();",
                        "    const user = jsonData.data.user;",
                        "    pm.expect(user).to.have.property('plan');",
                        "    pm.expect(user).to.have.property('is_pro');",
                        "    pm.expect(user).to.have.property('is_trial');",
                        "    pm.expect(user).to.have.property('is_guest');",
                        "    pm.expect(user).to.have.property('subscription');",
                        "});"
                    ],
                    "type": "text/javascript"
                }
            }],
            "request": {
                "method": "PATCH",
                "header": [{
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}",
                        "description": "Access token from login"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"{{userName}}\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/api/user/profile",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "user",
                        "profile"
                    ]
                },
                "description": "Update the authenticated user's profile name. Returns updated user object in the same format as /api/auth/me."
            },
            "response": []
        },
        {
            "name": "Update User Profile - Example",
            "request": {
                "method": "PATCH",
                "header": [{
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{accessToken}}"
                    }
                ],
                "body": {
                    "mode": "raw",
