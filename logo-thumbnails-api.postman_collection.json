  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set timestamp for request tracking",
          "pm.globals.set('requestTimestamp', new Date().toISOString());"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Basic response validation",
          "pm.test('Response status code is 200', function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "pm.test('Response has success field', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('success');",
          "});",
          "",
          "pm.test('Response has data field', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('data');",
          "});",
          "",
          "pm.test('Response has pagination info', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData.data).to.have.property('pagination');",
          "});",
          "",
          "pm.test('Pagination has required fields', function () {",
          "    const jsonData = pm.response.json();",
          "    const pagination = jsonData.data.pagination;",
          "    pm.expect(pagination).to.have.property('page');",
          "    pm.expect(pagination).to.have.property('limit');",
          "    pm.expect(pagination).to.have.property('total');",
          "    pm.expect(pagination).to.have.property('pages');",
          "    pm.expect(pagination).to.have.property('categoriesCount');",
          "});",
          "",
          "pm.test('Response time is acceptable', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "// Language-specific tests",
          "const url = pm.request.url.toString();",
          "if (url.includes('lang=ar')) {",
          "    pm.test('Arabic response has RTL direction', function () {",
          "        const jsonData = pm.response.json();",
          "        pm.expect(jsonData.direction).to.eql('rtl');",
          "    });",
          "    ",
          "    pm.test('Arabic response has Arabic message', function () {",
          "        const jsonData = pm.response.json();",
          "        pm.expect(jsonData.language).to.eql('ar');",
          "    });",
          "} else {",
          "    pm.test('English response has LTR direction', function () {",
          "        const jsonData = pm.response.json();",
          "        pm.expect(jsonData.direction).to.eql('ltr');",
          "    });",
          "    ",
          "    pm.test('English response has English message', function () {",
          "        const jsonData = pm.response.json();",
          "        pm.expect(jsonData.language).to.eql('en');",
          "    });",
          "}",
          "",
          "// Category filtering tests",
          "if (url.includes('category_id=')) {",
          "    pm.test('Category filtering works', function () {",
          "        const jsonData = pm.response.json();",
          "        if (jsonData.data.data.length > 0) {",
          "            const firstLogo = jsonData.data.data[0].logos[0];",
          "            pm.expect(firstLogo).to.have.property('categoryId');",
          "            pm.expect(firstLogo).to.have.property('categoryName');",
          "        }",
          "    });",
          "}",
          "",
          "// Pagination tests",
          "if (url.includes('page=') || url.includes('limit=')) {",
          "    pm.test('Pagination parameters are respected', function () {",
          "        const jsonData = pm.response.json();",
          "        const pagination = jsonData.data.pagination;",
          "        ",
          "        // Check if page parameter was used",
          "        if (url.includes('page=')) {",
          "            const pageParam = url.match(/page=([^&]+)/)[1];",
          "            pm.expect(pagination.page).to.eql(parseInt(pageParam));",
          "        }",
          "        ",
          "        // Check if limit parameter was used",
          "        if (url.includes('limit=')) {",
          "            const limitParam = url.match(/limit=([^&]+)/)[1];",
          "            pm.expect(pagination.limit).to.eql(parseInt(limitParam));",
          "        }",
          "    });",
          "}",
          "",
          "// Log response details for debugging",
          "console.log('Response time:', pm.response.responseTime + 'ms');",
          "console.log('Total logos:', pm.response.json().data.pagination.total);",
          "console.log('Categories found:', pm.response.json().data.pagination.categoriesCount);"
        ]
      }
    }
  ]
